<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane fx:id="mainStackPane" alignment="CENTER" prefHeight="400.0" prefWidth="900.0" style="-fx-spacing: 20;" stylesheets="@bootstrap3.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.viewer.expensesviewer.controller.ExpensesController">
   <TabPane prefHeight="400.0" prefWidth="861.0" tabClosingPolicy="UNAVAILABLE">
     <tabs>
       <Tab text="Доходы">
            <content>
               <VBox>
                  <children>
                     <TableView fx:id="myTable" prefHeight="329.0" prefWidth="600.0">
                       <columns>
                         <TableColumn fx:id="myColumn1" prefWidth="75.0" text="Make" />
                         <TableColumn fx:id="myColumn2" prefWidth="75.0" text="Model" />
                         <TableColumn fx:id="myColumn3" prefWidth="75.0" text="Distance" />
                         <TableColumn fx:id="myColumn4" prefWidth="75.0" text="Price USD" />
                       </columns>
                     </TableView>
                     <HBox alignment="CENTER_LEFT" spacing="3.0" styleClass="context-menu">
                        <children>
                           <Label text="Make:">
                              <HBox.margin>
                                 <Insets left="10.0" />
                              </HBox.margin></Label>
                           <TextField fx:id="newMake" promptText="make">
                              <opaqueInsets>
                                 <Insets />
                              </opaqueInsets>
                              <HBox.margin>
                                 <Insets />
                              </HBox.margin></TextField>
                           <Label text="Model:">
                              <HBox.margin>
                                 <Insets left="10.0" />
                              </HBox.margin></Label>
                           <TextField fx:id="newModel" promptText="model">
                              <opaqueInsets>
                                 <Insets />
                              </opaqueInsets>
                              <HBox.margin>
                                 <Insets />
                              </HBox.margin></TextField>
                           <Label text="Distance:">
                              <HBox.margin>
                                 <Insets left="10.0" />
                              </HBox.margin></Label>
                           <TextField fx:id="newDistance" promptText="distance">
                              <opaqueInsets>
                                 <Insets />
                              </opaqueInsets>
                              <HBox.margin>
                                 <Insets />
                              </HBox.margin></TextField>
                           <Label text="Price:">
                              <HBox.margin>
                                 <Insets left="10.0" />
                              </HBox.margin></Label>
                           <TextField fx:id="newPrice" promptText="price">
                              <opaqueInsets>
                                 <Insets />
                              </opaqueInsets>
                              <HBox.margin>
                                 <Insets />
                              </HBox.margin></TextField>
                           <Button fx:id="addButton" mnemonicParsing="false" prefHeight="32.0" prefWidth="78.0" text="Add car" onAction="#addNewCar">
                              <opaqueInsets>
                                 <Insets />
                              </opaqueInsets>
                              <HBox.margin>
                                 <Insets />
                              </HBox.margin></Button>
                        </children>
                        <opaqueInsets>
                           <Insets />
                        </opaqueInsets>
                        <VBox.margin>
                           <Insets />
                        </VBox.margin>
                        <padding>
                           <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                        </padding>
                     </HBox>
                  </children>
               </VBox>
            </content></Tab>
       <Tab text="Расходы">
         <content>
           <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
         </content>
       </Tab>
       <Tab text="Перемещения">
             <content>
                 <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
             </content>
       </Tab>
       <Tab text="Отчёты">
             <content>
                 <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
             </content>
       </Tab>
         <Tab text="Справочники">
             <content>
                 <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
             </content>
         </Tab>
     </tabs>
   </TabPane>
   <Button fx:id="exit" alignment="TOP_RIGHT" mnemonicParsing="false" onAction="#exit" text="Выход" StackPane.alignment="TOP_RIGHT">
      <opaqueInsets>
         <Insets />
      </opaqueInsets>
      <StackPane.margin>
         <Insets bottom="2.0" left="5.0" right="2.0" top="2.0" />
      </StackPane.margin>
   </Button>
</StackPane>
